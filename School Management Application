class School():
    school_name = 'Urdu High school'
    contact = 9006300588
    Head_master = 'Hydar ali'
    Total_num_of_students = 500
    number_class_rooms = 18
    play_ground = 'Not available'

    
    def __init__(self,name,phn,addrs,standard) -> None:
        self.name= name
        self.phn = phn
        self.addrs = addrs
        
        self.standard = standard

    
    def details(self):
        print(f'name of the student is {self.name}')
        print(f'{self.name} parents contact number is {self.phn}')
        print(f'Student address is {self.addrs}')
        print(f'studying in  {self.standard}')
        
    def Update_phone_number(self):
        New_phn = int(input('Enter the new number: '))
        self.phn = New_phn
        print(f'{self.phn}  is updated successfully...ğŸ˜')


student1 = School('Shaik',6300299581,'10-261 Jagan colony Madanapalli(517325)','10th standard')
student1.details()
student2 = School('Ab',83091057444,'10-261 Jagan colony Madanapalli(517325)','8th standard')
student2.details()
student2.Update_phone_number()
student2.details()
